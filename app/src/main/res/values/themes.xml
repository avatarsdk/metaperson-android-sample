<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidWebViewSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/avatar_sdk_violet</item>
        <item name="colorPrimaryVariant">@color/avatar_sdk_violet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/avatar_sdk_orange</item>
        <item name="colorSecondaryVariant">@color/avatar_sdk_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/avatar_sdk_violet</item>
    </style>
    <style name="Theme.AndroidWebViewSample.Button.Orange" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:backgroundTint">@color/avatar_sdk_orange</item>
    </style>
    <style name="Theme.AndroidWebViewSample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidWebViewSample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndroidWebViewSample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>